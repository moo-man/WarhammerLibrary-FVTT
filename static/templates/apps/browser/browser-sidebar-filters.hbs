<div class="flexcol">
    {{#each additional}}
    {{#if (eq type "boolean")}}
    <div class="filter filter-boolean" data-filter-id="{{ key }}">
        <label>
            <filter-state name="additional.{{ key }}" value="{{ value }}" {{ disabled locked }}></filter-state>
            <span>{{ localize label }}</span>
        </label>
    </div>
    {{else if (eq type "range")}}
    <div class="filter filter-range form-group label-top" data-filter-id="{{ key }}">
        <label>{{ localize label }}</label>
        <div class="form-fields">
            <input {{#if config.text}}type="text"{{else}}type="number"{{/if}} name="additional.{{ key }}.min" value="{{ value.min }}"
                   min="{{ config.min }}" max="{{ config.max }}" step="any" placeholder="{{ config.min }}"
                   {{ disabled locked.min }}>
            <span class="sep"></span>
            <input {{#if config.text}}type="text"{{else}}type="number"{{/if}} name="additional.{{ key }}.max" value="{{ value.max }}"
                   min="{{ config.min }}" max="{{ config.max }}" step="any" placeholder="{{ config.max }}"
                   {{ disabled locked.max }}>
        </div>
    </div>
    {{else if (eq type "set")}}
        {{> "modules/warhammer-lib/templates/apps/browser/browser-sidebar-filter-set.hbs" }}
    {{else if (eq type "text")}}
        <div class="filter filter-text form-group label-top" data-filter-id="{{ key }}">
            <label>
                {{ localize label }}
            </label>
            <div class="form-fields">
                <input type="text" name="additional.{{ key }}" value="{{ value }}" {{ disabled locked }}>
            </div>
        </div>
    {{else}}
    <div class="filter" data-filter-id="{{ key }}">{{ label }}</div>
    {{/if}}
    {{/each}}
</div>
