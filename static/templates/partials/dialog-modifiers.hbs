<div class="dialog-modifiers">
    <label>{{localize "WH.Dialog.Modifiers"}}</label>
    <ul class="modifier-list">
        {{#each data.scripts}}
            <li class="modifier {{#if this.isActive}}active {{else if this.isHidden}}hidden{{/if}}"
                data-tooltip="{{this.effect.name}} {{#if this.options.dialog.targeter}}(Target){{/if}}"
                data-tooltip-direction="RIGHT" data-index="{{@key}}">&#8226; <a>{{this.Label}}</a></li>
        {{/each}}
    </ul>
</div>