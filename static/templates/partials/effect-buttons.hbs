{{#if targetEffects.length}}
    <div class="test-buttons">
        {{#each testEffects as |effect e|}}
            <button class="apply-effect" data-id="{{effect.uuid}}" type="button"><i class="fa-solid fa-crosshairs"></i><img src="{{effect.img}}" width="25" height="25"> {{format 'WH.ApplyEffect' name=effect.name}}</button>
        {{/each}}
    </div>
{{/if}}

{{#if areaEffects.length}}
    <div class="test-buttons">
        {{#each areaEffects as |effect e|}}
            <button class="place-effect" data-uuid={{effect.uuid}} type="button"><i class="fa-solid fa-ruler-combined"></i><img src="{{effect.img}}" width="25" height="25"> {{format "WH.PlaceEffect" name=effect.name}}</button>
        {{/each}}
    </div>
{{/if}}

{{#if zoneEffects.length}}
    <div class="test-buttons">
        {{#each zoneEffects as |effect e|}}
            <button class="place-zone" data-uuid={{effect.uuid}} type="button"><i class="fa-solid fa-game-board-simple"></i><img src="{{effect.img}}" width="25" height="25"> {{format "WH.PlaceEffect" name=effect.name}}</button>
        {{/each}}
    </div>
{{/if}}